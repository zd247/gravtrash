<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customers.nav.CustomerDashboardFragment"
    android:background="@color/colorAccent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dash_board_be_driver_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/driver_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dash_board_acc_settings_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/acc_settings_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dash_board_recycle_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/recycle_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dash_board_logout_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/shutdown_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93" />


</androidx.constraintlayout.widget.ConstraintLayout>