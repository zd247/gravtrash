<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/receiver_profile_image"
        android:background="@drawable/receiver_messages_layout"
        android:text="receiver message..."
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/receiver_last_sent"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/receiver_profile_image"
        android:layout_below="@+id/receiver_message_text"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:text="last_sent_time"
        android:textSize="12sp"
        android:layout_marginStart="15dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="@+id/receiver_last_sent"
        android:background="@drawable/sender_messages_layout"
        android:text="sender message..."
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/sender_last_sent"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender_message_text"
        android:layout_alignParentTop="@+id/sender_message_text"
        android:layout_alignParentEnd="true"
        android:text="last_sent_time"
        android:textSize="12sp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"/>


</RelativeLayout>